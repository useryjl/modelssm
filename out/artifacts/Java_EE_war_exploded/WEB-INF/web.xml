<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>com.yjl.controller.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>

<!--        模板模式设计原则 将一个模块下的请求 交给一个servlet处理-->
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
        <url-pattern>/student/addstudent.do</url-pattern>
        <url-pattern>/student/deletestudent.do</url-pattern>
        <url-pattern>/student/updatestudent.do</url-pattern>
        <url-pattern>/student/selectstudent.do</url-pattern>
    </servlet-mapping>
</web-app>